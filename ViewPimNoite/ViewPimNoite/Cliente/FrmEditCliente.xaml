        <TextBox HorizontalAlignment="Left" Height="23" Margin="45,286,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="108" RenderTransformOrigin="0.492,0.478" BorderBrush="#DDA6A6A6"/>
        <Label Content="Endereço" HorizontalAlignment="Left" Margin="185,260,0,0" VerticalAlignment="Top" Foreground="#DDA6A6A6"/>
