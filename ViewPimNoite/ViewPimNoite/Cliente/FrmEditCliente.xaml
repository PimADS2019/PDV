        <Label Content="Bairro" HorizontalAlignment="Left" Margin="39,331,0,0" VerticalAlignment="Top" Foreground="#DDA6A6A6"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="45,362,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="123" RenderTransformOrigin="0.492,0.478" BorderBrush="#DDA6A6A6"/>
        <Label Content="Cidade" HorizontalAlignment="Left" Margin="185,336,0,0" VerticalAlignment="Top" Foreground="#DDA6A6A6"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="191,362,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="417" RenderTransformOrigin="0.492,0.478" BorderBrush="#DDA6A6A6"/>
        <Label Content="Estado" HorizontalAlignment="Left" Margin="635,336,0,0" VerticalAlignment="Top" Foreground="#DDA6A6A6"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="641,362,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="108" RenderTransformOrigin="0.492,0.478" BorderBrush="#DDA6A6A6"/>
