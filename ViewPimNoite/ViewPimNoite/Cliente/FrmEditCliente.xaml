        <TextBox HorizontalAlignment="Left" Height="23" Margin="45,433,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="150" RenderTransformOrigin="0.492,0.478" BorderBrush="#DDA6A6A6"/>
