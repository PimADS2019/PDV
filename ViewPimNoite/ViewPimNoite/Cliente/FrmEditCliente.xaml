        <TextBox HorizontalAlignment="Left" Height="23" Margin="579,135,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="170" RenderTransformOrigin="0.492,0.478" BorderBrush="#DDA6A6A6"/>

        <Rectangle Fill="White" HorizontalAlignment="Left" Height="270" Margin="19,226,0,0"  Stroke="#DDA6A6A6" VerticalAlignment="Top" Width="753"/>
