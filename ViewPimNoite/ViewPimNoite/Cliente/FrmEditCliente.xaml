        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ViewPimNoite.Cliente"
        mc:Ignorable="d" Height="587.5" Width="800" ResizeMode="NoResize" Title="Edição de Cliente" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen">
